<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="ascure_awebersubscription_refresh_token" instance="Ascure\AweberSubscription\Cron\RefreshToken" method="execute">
            <schedule>* */2 * * *</schedule>
        </job>
    </group>
</config>