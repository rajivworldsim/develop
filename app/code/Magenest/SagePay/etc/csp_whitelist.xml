<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="sagepay-script" type="host">*.sagepay.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="sagepay-connect" type="host">*.sagepay.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="sagepay-frame" type="host">*.sagepay.com</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="sagepay-form" type="host">*.sagepay.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
